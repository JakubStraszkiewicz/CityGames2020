@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@using CityGames2019.Resources

@inject LocService SharedLocalizer
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
        .ToList();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@SharedLocalizer.GetLocalizedHtmlString("Hello") @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@SharedLocalizer.GetLocalizedHtmlString("Logout")</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <!--
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        -->
        <li><a asp-area="Identity" asp-page="/Account/Login">@SharedLocalizer.GetLocalizedHtmlString("LoginOrRegister")</a></li>
    </ul>
}
    <ul class="nav navbar-nav navbar-right">
        <li>
            <form id="selectLanguage" asp-controller="Home"
                  asp-action="SetLanguage" asp-route-returnUrl="@returnUrl"
                  method="post" class="form-horizontal" role="form">
                <button name="culture" value="pl-PL" class="navbar-btn navbar-inverse" style="border-color:#222;border-style: solid;" onclick="this.form.submit();">
                    <img src="~/images/pl.png" />
                </button>
            </form>
        </li>
        <li>
            <form id="selectLanguage" asp-controller="Home"
                  asp-action="SetLanguage" asp-route-returnUrl="@returnUrl"
                  method="post" class="form-horizontal" role="form">
                <button name="culture" value="en-US" class="navbar-btn navbar-inverse" style="border-color:#222;border-style: solid;" onclick="this.form.submit();">
                    <img src="~/images/en.png" />
                </button>
            </form>
        </li>
    </ul>