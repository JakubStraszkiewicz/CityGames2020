@page
@model LoginModel

@using CityGames2019.Resources
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("LoginOrRegister");
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>@SharedLocalizer.GetLocalizedHtmlString("LoggingIn")</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InputLogin.Username"></label>
                    <input asp-for="InputLogin.Username" class="form-control" />
                    <span asp-validation-for="InputLogin.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InputLogin.Password"></label>
                    <input asp-for="InputLogin.Password" class="form-control" />
                    <span asp-validation-for="InputLogin.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="InputLogin.RememberMe">
                            <input asp-for="InputLogin.RememberMe" />
                            @Html.DisplayNameFor(m => m.InputLogin.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" name="button" value="LogIn" class="btn btn-default">@SharedLocalizer.GetLocalizedHtmlString("Login")</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">@SharedLocalizer.GetLocalizedHtmlString("ForgotYourPassword")</a>
                    </p>
                    <!--
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    -->
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>@SharedLocalizer.GetLocalizedHtmlString("Registration")</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InputRegister.Email"></label>
                    <input asp-for="InputRegister.Email" class="form-control" />
                    <span asp-validation-for="InputRegister.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InputRegister.Username"></label>
                    <input asp-for="InputRegister.Username" class="form-control" />
                    <span asp-validation-for="InputRegister.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InputRegister.Password"></label>
                    <input asp-for="InputRegister.Password" class="form-control" />
                    <span asp-validation-for="InputRegister.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InputRegister.ConfirmPassword"></label>
                    <input asp-for="InputRegister.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="InputRegister.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InputRegister.Name"></label>
                    <input asp-for="InputRegister.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="InputRegister.Surname"></label>
                    <input asp-for="InputRegister.Surname" class="form-control" />
                </div>
                <button type="submit" name="button" value="Register" class="btn btn-default">@SharedLocalizer.GetLocalizedHtmlString("Register")</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
