@using CityGames2019.Models;
@using CityGames2019.Resources;
@inject SignInManager<User> SignInManager
@inject LocService SharedLocalizer

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills nav-stacked">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-page="./Index">@SharedLocalizer.GetLocalizedHtmlString("Profile")</a></li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a id="change-password" asp-page="./ChangePassword">@SharedLocalizer.GetLocalizedHtmlString("ChangePassword")</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a id="external-login" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="@ManageNavPages.PersonalDataNavClass(ViewContext)"><a asp-page="./PersonalData">@SharedLocalizer.GetLocalizedHtmlString("PersonalData")</a></li>
</ul>
